<config>
    <modules>
        <Febin_Employee>
            <version>1.0.0</version>
        </Febin_Employee>
    </modules>
    <global>
        <resources>
            <febin_employee_setup>
                <setup>
                    <module>Febin_Employee</module>
                    <class>Febin_Employee_Model_Resource_Setup</class>
                </setup>
            </febin_employee_setup>
        </resources>
        <blocks>
            <febin_employee>
                <class>Febin_Employee_Block</class>
            </febin_employee>
        </blocks>
        <helpers>
            <febin_employee>
                <class>Febin_Employee_Helper</class>
            </febin_employee>
        </helpers>
        <models>
            <febin_employee>
                <class>Febin_Employee_Model</class>
                <resourceModel>febin_employee_resource</resourceModel>
            </febin_employee>
            <febin_employee_resource>
                <class>Febin_Employee_Model_Resource</class>
                <entities>
                    <employee>
                        <table>febin_employee_employee</table>
                    </employee>
                    <eav_attribute>
                        <table>febin_employee_eav_attribute</table>
                    </eav_attribute>
                </entities>
            </febin_employee_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <febin_employee>
                    <file>febin_employee.xml</file>
                </febin_employee>
            </updates>
        </layout>
        <translate>
            <modules>
                <Febin_Employee>
                    <files>
                        <default>Febin_Employee.csv</default>
                    </files>
                </Febin_Employee>
            </modules>
        </translate>
        <global_search>
            <employee>
                <class>febin_employee/adminhtml_search_employee</class>
                <acl>febin_employee</acl>
            </employee>
        </global_search>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Febin_Employee before="Mage_Adminhtml">Febin_Employee_Adminhtml</Febin_Employee>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <febin_employee>
                <use>standard</use>
                <args>
                    <module>Febin_Employee</module>
                    <frontName>febin_employee</frontName>
                </args>
            </febin_employee>
        </routers>
        <layout>
            <updates>
                <febin_employee>
                    <file>febin_employee.xml</file>
                </febin_employee>
            </updates>
        </layout>
        <translate>
            <modules>
                <Febin_Employee>
                    <files>
                        <default>Febin_Employee.csv</default>
                    </files>
                </Febin_Employee>
            </modules>
        </translate>
    </frontend>
    <default>
        <febin_employee>
            <employee>
                <breadcrumbs>1</breadcrumbs>
            </employee>
        </febin_employee>
    </default>
</config>
